<div class=show-banner-img>
  <% if @event.photos.attached? %>
    <img class="w-100"  src="<%= cl_image_path @event.photos.first.key %>">
  <% else %>
    <img class="w-100" src="https://images.unsplash.com/photo-1561026555-13539e82532f?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=967&q=80" id="show-image">
  <% end %>
  <div class=show-banner-content>
      <h1><%= @event.title %></h1>
      <p><%= @event.organization.name %></p>
  </div>
</div>
<div class="container">
  <ul style="list-style-type: none;" class="ml-0 pl-0 pt-4">
    <li class="p-1 font-weight-light" style="font-size: 14px"><i class="fas fa-map-marker-alt"></i> <%= @event.location %></li>
    <li class="p-1 font-weight-light" style="font-size: 14px" ><i class="far fa-calendar-alt"></i> <%= @event.start_time.strftime("%b %d, %Y") %></li>
    <li class="p-1 font-weight-light" style="font-size: 14px"><i class="far fa-clock"></i> <%= @event.start_time.strftime("%I:%M %p") %> - <%= @event.end_time.strftime("%I:%M %p") %></li>
  </ul>

  <h3>About the event</h3>
  <p class="font-weight-light" style="font-size: 14px;"><%= @event.description %></p>

  <div class="d-flex justify-content-between mt-4">
    <p class="my-label" >Who's coming?</p>
    <p style="font-size: 14px;" class="counter"><i class="far fa-user"></i> <%= @event.bookings.count %> out of <%= @event.capacity %> spots</p>
  </div>

    <div class="avatar-container">
      <%  @event.bookings.first(5).each do |booking| %>
        <img class="avatar" src=" <%= cl_image_path booking.user.photo.key %> " alt="face">
      <% end %>
    </div>


  <%= simple_form_for [@event, @booking] do |f| %>
    <%= f.input :attending, as: :hidden, input_html: {value: true} %>
    <input type="submit" id="submit-booking" style="position: absolute; left: -100vw;">

      <label class="<%= 'disabled' if @event.is_full? %> primary-button d-flex align-items-center justify-content-center" for="submit-booking">
        <%= @event.cta_content.html_safe %> </label>

  <% end %>
  <br>
  <p>How to get there...</p>

<div id="map" class="mb-3"
     style="width: 100%; height: 200px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div>
  <p class="p-1 font-weight-light" style="font-size: 14px"><i class="fas fa-map-marker-alt"></i> <%= @event.location %></p>
  <br>
  <br>
  <br>
</div>
</div> <!---- closing the main div ----->


