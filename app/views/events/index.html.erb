<div class="banner">
  <%= render 'shared/logo-login-purple' %>
  <h4>Missions in location</h4>
  <div class="main-container">
    <div class="search-form">
       <%= form_tag events_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control rounded-search mb-4", placeholder: ""%>
        <% end %>
    </div>
    <div class="details-filter">
      <p>250 missions found</p>
      <p>Filter<img src="https://res.cloudinary.com/kennedyodegaard/image/upload/v1607526430/filter_iconfilter_sxm5zf.png"></p>
    </div>
    <div class="pills">
        <p class="pill-white">LGBTQ+</p>
        <p class="pill-purple">animals</p>
        <p class="pill-purple">senior</p>
        <p class="pill-white">more</p>
    </div>
    <% @events.each do |event|  %>
      <div class="event-card">
        <% if event.photos.attached? %>
           <img src="<%= cl_image_path event.photos.first.key %>" alt="..." id="event-image">
          <% else %>
           <img src="https://res.cloudinary.com/kennedyodegaard/image/upload/v1607524305/nx5c2nwp3ragtvuihxeui53bqcph.jpg" id="event-image">
          <% end %>
        <div class="card-information">
          <div class="card-info">
            <p><i class="far fa-calendar-alt"></i>  <%= event.start_time.strftime("%A, %b %d") %></p>
            <img src="https://res.cloudinary.com/kennedyodegaard/image/upload/v1607513661/Vectorheart_bx0iai.png" id="heart">
          </div>
          <h6><%= event.title %></h6>
          <div class="card-info2">
            <p><%= event.user.first_name %> <%= event.user.last_name %></p>
            <p><%= event.capacity %> spots</p>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>
