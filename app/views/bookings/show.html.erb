<div class="main-container">
  <%= render 'shared/logo-login-white' %>
    <h3 class="text-center" style= "margin-top: 20px;">You have just joined <%= @booking.event.title %></h3>
    <img src="https://res.cloudinary.com/kennedyodegaard/image/upload/v1607506215/upfluential_hero_illustration_r2e0xb.png" alt="" id="hero-image">
    <ul style="list-style: none; display:table; margin-top:20px auto;">
          <li class="p-1 booking-list"><i class="fas fa-map-marker-alt"></i> <%= @booking.event.location %></li>
          <li class="p-1 booking-list" ><i class="far fa-calendar-alt"></i> <%= @booking.event.start_time.strftime("%b %d, %Y") %></li>
          <li class="p-1 booking-list "><i class="far fa-clock"></i> <%= @booking.event.start_time.strftime("%I:%M %p") %> - <%= @booking.event.end_time.strftime("%I:%M %p") %></li>
          <li></li>
      </ul>
        <p class= "primary-button"><%= link_to "See all my upcoming events", events_path %></p>
    <div id="map" class="mt-3"
       style="width: 100%; height: 200px; border-radius: 15px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>

