  <%= render 'shared/logo-login-white' %>
  <img src="https://res.cloudinary.com/kennedyodegaard/image/upload/v1607506215/upfluential_hero_illustration_r2e0xb.png" alt="" id="hero-image">
  <div class="main-container">
    <h3 class="text-center" style= "margin-top: 20px;"><span class="font-weight-light">You have just joined</span> <%= @booking.event.title %>!</h3>
    <ul style="list-style: none; display:table; margin-top:20px">
          <li class="p-1 booking-list"><i class="fas fa-map-marker-alt"></i> <%= @booking.event.location %></li>
          <li class="p-1 booking-list" ><i class="far fa-calendar-alt"></i> <%= @booking.event.start_time.strftime("%b %d, %Y") %></li>
          <li class="p-1 booking-list "><i class="far fa-clock"></i> <%= @booking.event.start_time.strftime("%I:%M %p") %> - <%= @booking.event.end_time.strftime("%I:%M %p") %></li>
          <li></li>
      </ul>
        <%= link_to "See all my upcoming events", dashboard_path, class: "primary-button" %>
  <div>
    <p class="mt-3 my-label social-media">Share this event...</p>
  </div>
  <div class="social-media d-flex">
    <h2><i class="fab fa-facebook"></i></h2>
    <a href="whatsapp://send?text=Join me at <%= @event.title %> - <%= request.original_url %>"><h2><i class="fab fa-whatsapp"></i></h2></a>
    <h2><i class="fab fa-twitter"></i></h2>
  </div>
    <div id="map" class="mt-3"
       style="width: 100%; height: 200px; border-radius: 15px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
</div>
